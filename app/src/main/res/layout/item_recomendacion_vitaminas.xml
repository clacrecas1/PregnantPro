<!-- item_recomendacion_vitaminas.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/recomendacionTituloVitaminas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recomendación"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivIconoRecomendacionesVitaminas"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_vitaminas"
          />

        <TextView
            android:id="@+id/recomendacionDescripcionVitaminas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción detallada de la recomendación."
            android:textColor="?android:attr/textColorSecondary" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
