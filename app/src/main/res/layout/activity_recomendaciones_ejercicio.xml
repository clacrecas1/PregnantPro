<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRecomendacionesEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_recomendacion_ejercicio" />

    <!-- Añade el ImageView para el icono aquí -->
    <ImageView
        android:id="@+id/ivIconoRecomendacionesEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerViewRecomendacionesEjercicio"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_ejercicio" />

    <!-- VideoView para el video de ejercicio -->
    <VideoView
        android:id="@+id/videoViewEjercicio"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/recyclerViewRecomendacionesEjercicio"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
